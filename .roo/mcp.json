{
  "mcpServers": {
    "python-language-server": {
      "command": "/home/yuwei/go/bin/mcp-language-server",
      "args": [
        "--workspace",
        "/home/yuwei/DeepRecall/DeepRecall/",
        "--lsp",
        "pyright-langserver",
        "--",
        "--stdio"
      ],
      "disabled": false,
      "alwaysAllow": [
        "definition",
        "diagnostics",
        "edit_file",
        "hover",
        "references",
        "rename_symbol"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "alwaysAllow": [
        "resolve-library-id",
        "get-library-docs"
      ]
    }
  }
}