    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "RAG embed",
            "type": "debugpy",
            "request": "launch",
            "program": "src/deeprecall/rag/embed/task.py",
            "console": "integratedTerminal",
            "args": "~/DeepRecall/DeepRecall/resources chroma thesis deepinfra"
        },
        {
            "name": "RAG extract",
            "type": "debugpy",
            "request": "launch",
            "program": "src/deeprecall/rag/extract/task.py",
            "console": "integratedTerminal",
            "args": "chroma thesis deepinfra \"Define FLiBe\""
        }
    ]
}